@model List<ProductEntity>

@if (Model.Count != 0)
{
    <div class="product-grid">
        @foreach (var item in Model)
        {
            <div class="product-card">
                <div class="product-image">
                    <a asp-controller="WishList" asp-action="AddToWishlist" asp-route-productId="@item.Id">
                        <button><i class="fa-light fa-heart"></i></button>
                    </a>                   
                    <button type="submit"><i class="fa-light fa-shopping-bag"></i></button>                    
                </div>
                <div class="product-content">
                    <div class="stars">
                        @for (int i = 0; i < item.Rating; i++)
                        {
                            <i class="fa-sharp fa-solid fa-star"></i>
                        }
                        <p>(@item.Rating)</p>
                    </div>
                    <a asp-controller="ProductDetails" asp-action="Product" asp-route-id="@item.Id">
                        <p>@item.Name</p>
                        <div class="price">
                            <p class="original-price"></p>
                            <p class="discount-price">$@item.Price.ToString("0.00")</p>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
}


