@model SignUpViewModel

<!-- Sign up -->
<section class="sign-up">
    <div class="container">
        <!-- Go back navbar -->
        <div class="go-back-navbar">
            <a asp-controller="SignIn" asp-action="Index" class="first"><i class="fa-solid fa-chevron-left"></i></a>
            <div class="middle">Sign up</div>
            <div class="last">test</div>
        </div>

        <div class="sign-up-section">
            <div class="vertical-line"></div>
            <h1 class="sign-up-title">Sign Up</h1>
            <!-- Sign up form -->
            <form method="post" novalidate>

                <div asp-validation-summary="ModelOnly" class="error-message"></div>

                <div class="input-grp">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" onkeyup="validateFirstName(event)">
                    <i id="check-mark-FirstName" class="i-shown i-hide fa-solid fa-check"></i> <i id="x-mark-FirstName" class="i-shown i-hide fa-solid fa-xmark"></i>
                    <span class="validation-message" asp-validation-for="FirstName"></span>
                </div>

                <div class="input-grp">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" onkeyup="validateLastName(event)">
                    <i id="check-mark-LastName" class="i-shown i-hide fa-solid fa-check"></i> <i id="x-mark-LastName" class="i-shown i-hide fa-solid fa-xmark"></i>
                    <span class="validation-message" asp-validation-for="LastName"></span>
                </div>

                <div class="input-grp">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" id="email-input" onkeyup="validateEmail(event)">
                    <i id="check-mark" class="i-shown i-hide fa-solid fa-check"></i> <i id="x-mark" class="i-shown i-hide fa-solid fa-xmark"></i>
                    <span class="validation-message" asp-validation-for="Email"></span>
                </div>

                <div class="input-grp">
                    <label asp-for="Password"></label>
                    <input asp-for="Password">
                    <span class="validation-message" asp-validation-for="Password"></span>
                </div>

                <div class="input-grp">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword">
                    <span class="validation-message" asp-validation-for="ConfirmPassword"></span>
                </div>

                <button class="button-theme" type="submit">SIGN UP</button>
            </form>

            <div class="have-account">Already have an account? <a asp-controller="SignIn" asp-action="Index">Sign in.</a></div>

            <div class="sign-up-with">
                <a target="_blank" href="https://www.facebook.com/"><div class="facebook"><i class="fa-brands fa-facebook-f"></i></div></a>
                <a target="_blank" href="https://twitter.com/"><div class="twitter"><i class="fa-brands fa-twitter"></i></div></a>
                <a target="_blank" href="https://www.google.se/"><div class="google"><i class="fa-brands fa-google-plus-g"></i></div></a>
            </div>
        </div>
    </div>
</section>