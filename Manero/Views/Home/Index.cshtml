@model HomeControllerVM

<section class="top-bar">
        <div class="container">
            <div class="toggle-menu">
            <button id="toggle-btn"><i class="fa-solid fa-bars-staggered"></i></button>
                <div id="toggle-menu-body" class="toggle-invisible">
                    <div class="toggle-menu-grid">
                        <div class="toggle-menu-top">
                            <div class="vertical-line"></div>
                            <h4 class="toggle-menu-title">Contact Us</h4>
                            <div class="toggle-menu-card">
                                <div class="circle"><i class="fa-regular fa-location-dot"></i></div>
                                <div>
                                    <span>27 Division St, New York,</span>
                                    <span>NY 10002, USA</span>
                                </div>
                            </div>
                            <div class="toggle-menu-card">
                                <div class="circle"><i class="fa-regular fa-envelope"></i></div>
                                <div>
                                    <span>manerosale@mail.com</span>
                                    <span>manerosupport@mail.com</span>
                                </div>
                            </div>
                            <div class="toggle-menu-card">
                                <div class="circle"><i class="fa-regular fa-phone-volume"></i></div>
                                <div>
                                    <span>+17  123456789</span>
                                    <span>+17  987654321</span>
                                </div>
                            </div>
                        </div>
                        <div class="toggle-menu-bottom">
                            <div class="track-order-title">Track your order</div>
                            <div class="input-grp">
                                <label>ORDER NUMBER</label>
                                <input type="text">
                                <button><i class="fa-regular fa-arrow-right"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="logo">
                <span></span>
                <h4>MANERO</h4>
            </div>
            <button>
                <i class="fa-light fa-bag-shopping"></i>
            </button>
        </div>
    </section>

    <section class="showcase-categories">
        <div class="container">
            <div class="category">
                <div class="circle"></div>
                <p>Men</p>
            </div>
            <div class="category">
                <div class="circle"></div>
                <p>Women</p>
            </div>
            <div class="category">
                <div class="circle"></div>
                <p>Kids</p>
            </div>
            <div class="category">
                <div class="circle"></div>
                <p>Sport</p>
            </div>
        </div>
    </section>
    
    <section class="showcase">
        <div class="container">
            <h1>Take 50% off!</h1>
            <a class="button-theme">SHOP NOW</a>
        </div>
    </section>



    <section class="featured-products">
        <div class="container">
            <div class="section-title">
                <h3>Featured Products</h3>
                <a asp-controller="categories" asp-action="SelectedCategory" asp-route-category="Featured">view all<i class="fa-regular fa-chevron-right"></i></a>
            </div>
            <partial name="/Views/Partials/_ProductGrid.cshtml" model="@Model.FeaturedProducts"/>
        </div>
    </section>

    <section class="best-sellers">
        <div class="container">
            <div class="section-title">
                <h3>Best Sellers</h3>
            <a asp-controller="categories" asp-action="SelectedCategory" asp-route-category="Best Seller">view all<i class="fa-regular fa-chevron-right"></i></a>
            </div>
        <partial name="/Views/Partials/_ProductGrid.cshtml" model="@Model.BestSellers" />
        </div>
    </section>
    
<section class="bar">
    <div class="container"></div>
</section>  
<partial name="/Views/Partials/_NavbarPartial.cshtml" />